<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.prophit.time.MainActivity">

    <Button
        android:id="@+id/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="red"
        android:textColor="#ff0000" />

    <Button
        android:id="@+id/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/red"
        android:layout_centerHorizontal="true"
        android:text="blue"
        android:textColor="#0026ff" />

    <Button
        android:id="@+id/green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blue"
        android:layout_centerHorizontal="true"
        android:text="green"
        android:textColor="#22ff00" />

    <Button
        android:id="@+id/grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/green"
        android:layout_centerHorizontal="true"
        android:text="grey"
        android:textColor="#807d81" />
    <Button
        android:id="@+id/cyan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grey"
        android:layout_centerHorizontal="true"
        android:text="cyan"
        android:textColor="#7bfad4" />
    <Button
        android:id="@+id/pink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cyan"
        android:layout_centerHorizontal="true"
        android:text="pink"
        android:textColor="#fdf37ef7" />
    <Button
        android:id="@+id/amber"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pink"
        android:layout_centerHorizontal="true"
        android:text="amber"
        android:textColor="#ffad09" />
    <Button
        android:id="@+id/magenta"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/amber"
        android:text="megenta"
        android:textColor="#ff1068"
        />


</RelativeLayout>
